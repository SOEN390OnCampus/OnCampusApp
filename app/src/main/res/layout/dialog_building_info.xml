<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="0dp">

    <!-- Close Button (Top Right) -->
    <ImageButton
        android:id="@+id/btn_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/content_description_close_button"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="#666666" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Info Icon -->
        <TextView
            android:id="@+id/icon_info"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/info_icon_background"
            android:gravity="center"
            android:text="i"
            android:textSize="36sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Building Name -->
        <TextView
            android:id="@+id/txt_building_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SP BUILDING"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Building Address -->
        <TextView
            android:id="@+id/txt_building_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="7141 Sherbrooke St W, Montréal QC H4B 1R6, Canada"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Building Image -->
        <ImageView
            android:id="@+id/img_building"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/content_description_building_image"
            android:background="#F0F0F0"
            android:layout_marginBottom="16dp" />

        <!-- Building Description -->
        <TextView
            android:id="@+id/txt_building_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SP Building, Loyola Campus, Concordia University"
            android:textSize="14sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Building Description (French) -->
        <TextView
            android:id="@+id/txt_building_description_fr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Édifice SP Campus Loyola, Université Concordia"
            android:textSize="12sp"
            android:textColor="#666666"
            android:gravity="center" />

    </LinearLayout>

</RelativeLayout>
