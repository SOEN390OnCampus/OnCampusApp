<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Maps Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Status Display -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#80000000"
        android:padding="16dp"
        android:text="Loading Maps..."
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="visible" />

    <!-- Top Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="#80FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Campus Navigator"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Simple Campus Toggle Buttons -->
        <Button
            android:id="@+id/btnSGW"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:text="SGW"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnLoyola"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="LOY"
            android:textSize="10sp" />

    </LinearLayout>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fabBuildingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Building Info"
            android:visibility="gone" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/fabCurrentLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Location" />

    </LinearLayout>

</RelativeLayout>
