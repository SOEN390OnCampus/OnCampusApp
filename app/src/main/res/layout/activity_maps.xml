<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <androidx.cardview.widget.CardView
        android:id="@+id/search_bar_container"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="65dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/search_image"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/search"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/route_picker_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/concordia_red"
        android:elevation="10dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingBottom="20dp"
        android:paddingTop="85dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout_inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btn_swap_address"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/swap_address_image"
                android:src="@drawable/ic_baseline_swap_vert_24"
                app:tint="@android:color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:id="@+id/et_start"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/rounded_edittext"
                        android:hint="@string/select_or_input_starting_point"
                        android:textColor="#212121"
                        android:textColorHint="#757575"
                        android:inputType="textNoSuggestions"
                        android:paddingHorizontal="12dp"
                        android:textSize="14sp"
                        android:maxLines="1" />
                    <ImageView
                        android:id="@+id/currentLocationIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="12dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:visibility="gone"/>
                </FrameLayout>

                <AutoCompleteTextView
                    android:id="@+id/et_destination"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_edittext"
                    android:hint="@string/select_or_input_destination_point"
                    android:textColor="#212121"
                    android:textColorHint="#757575"
                    android:inputType="textNoSuggestions"
                    android:paddingHorizontal="12dp"
                    android:textSize="14sp"
                    android:maxLines="1" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tabs"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_white_rounded"
            android:padding="4dp"
            android:layout_marginBottom="16dp">
            <ImageButton
                android:id="@+id/btn_mode_walking"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_walk"
                android:background="#D3D3D3"
                android:scaleType="fitCenter"
                android:padding="10dp"/>
            <ImageButton
                android:id="@+id/btn_mode_driving"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_car"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:alpha="0.5"/>
            <ImageButton
                android:id="@+id/btn_mode_transit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_transit"
                android:background="?attr/selectableItemBackground"
                android:scaleType="fitCenter"
                android:padding="10dp"
                android:alpha="0.5"/>
            <LinearLayout
                android:id="@+id/btn_mode_shuttle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:alpha="0.5">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_transit"
                    app:tint="#000000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SHUTTLE"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:gravity="center"
                android:text="-- MIN"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_go"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/black"
                android:text="@string/go"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="25dp" />
            <Button
                android:id="@+id/btn_shuttle_timetable"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="0.7"
                android:layout_marginStart="4dp"
                android:backgroundTint="#912338"
                android:text="ðŸšŒ"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:visibility="gone"
                app:cornerRadius="25dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_navigation_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:background="@drawable/bg_white_rounded"
            android:padding="12dp">
            <TextView
                android:id="@+id/txt_nav_instruction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-- MINS"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>
            <Button
                android:id="@+id/btn_end_trip"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#CC3333"
                android:text="EXIT"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                app:cornerRadius="20dp"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="#CC333333"
        app:cardCornerRadius="25dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/btn_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/maps_info"
                android:src="@android:drawable/ic_dialog_info"
                app:tint="@android:color/white" />

            <TextView
                android:id="@+id/btn_campus_switch"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="4dp"
                android:background="@android:drawable/presence_online"
                android:backgroundTint="@color/concordia_red"
                android:gravity="center"
                android:text="@string/campus_loy"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/maps_current_location"
                android:src="@android:drawable/ic_menu_compass"
                app:tint="@android:color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>